<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_line_information"
        tools:context="xixiaxixi.szbus.LineInformationActivity">


        <ScrollView
                android:layout_width="395dp"
                android:layout_height="0dp" tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" >

                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                    <Button
                            android:text="发车间隔"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/btn_time"
                            android:layout_column="0"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
                    <Button
                            android:text="公告"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/btn_notice"
                            android:layout_column="1" android:layout_row="0"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
                </GridLayout>
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5px"
                        android:background="@color/colorAccent"/>
                <LinearLayout
                        android:id="@+id/ll_line_list"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

</android.support.constraint.ConstraintLayout>
